@using EntityLayer.Context
@model List<Card>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Sepet";
}

<div class="container-fluid pt-5">   
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Ürünler</th>
                        <th>Fiyat</th>
                        <th>Adet</th>
                        <th>Toplam Fiyat</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle"><img src="@item.ProductImage" alt="" style="width: 50px;">@item.ProductName</td>
                            <td class="align-middle">@item.Price TL</td>
                            <td class="align-middle">
                                <div class="input-group quantity mx-auto" style="width: 100px;">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-minus">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" class="form-control form-control-sm bg-secondary text-center" value="1">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-plus">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle">@item.Price TL</td>
                            <td class="align-middle"><a href="/Card/RemoveCard/@item.ProductID" class="btn btn-sm btn-primary"><i class="fa fa-times"></i></a></td>
                        </tr>
                    }
 
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Hesap Özeti</h4>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    @{
                        double toplam = 0;
                    }
                     @foreach (var item in Model)
                    {
                        toplam += item.Price;
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Toplam Fiyat</h5>
                            <h5 class="font-weight-bold">@toplam TL</h5>
                        </div>
                    }
        <button class="btn btn-block btn-primary my-3 py-3">Siparişi Ver</button>
                </div>
            </div>
        </div>
    </div>
</div>