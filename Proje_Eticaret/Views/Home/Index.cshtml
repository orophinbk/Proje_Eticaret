@using EntityLayer.Context
@model List<Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container-fluid pt-5">
    <div class="row px-xl-5 pb-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <img class="img-fluid w-100" src="@item.Image" alt="">
                    </div>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">@item.Name</h6>
                        <div class="d-flex justify-content-center">
                            <h6>@item.Price TL</h6>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <a href="/Home/ProductReadAll/@item.ProductID" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Detayı Gör</a>
                        <a href="/Card/CardAdd/" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Sepete Ekle</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
